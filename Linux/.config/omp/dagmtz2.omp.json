{
    "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
    "blocks": [
      {
        "alignment": "left",
        "segments": [
          {
            "foreground": "#26C6DA",
            "properties": {
              "macos": "mac"
            },
            "style": "plain",
            "template": "{{ if .WSL }}WSL at {{ end }}{{.Icon}}  ",
            "type": "os"
          },
          {
            "foreground": "#FF8000",
            "style": "plain",
            "template": "{{ .UserName }} ",
            "type": "session"
          },
          {
            "properties": {
              "cache_duration": "none",
              "home_icon": "~",
              "style": "folder"
            },
            "template": "<#B0B0B0>in</> \uea83  {{ .Path }} ",
            "foreground": "cyan",
            "type": "path",
            "style": "plain"
          },
          {
            "foreground": "#800080",
            "properties": {
              "branch_icon": " <#800080><b>\ue0a0 </b></>",
              "fetch_stash_count": true
            },
            "style": "plain",
            "template": "<#B0B0B0>on</>{{ .HEAD }}{{ if gt .StashCount 0 }} \ueb4b {{ .StashCount }}{{ end }} ",
            "type": "git"
          }
        ],
        "type": "prompt"
      },
      {
        "type": "prompt",
        "alignment": "right",
        "segments": [
          {
            "template": "<#B0B0B0>running</> {{ .Name }} ",
            "foreground": "#FF8000",
            "type": "shell",
            "style": "plain"
          },
          {
            "type": "session",
            "style": "plain",
            "foreground": "#FF8000",
            "template": "<#B0B0B0>on</> {{ if .SSHSession }}î®© {{ end }}{{ .HostName }} "
          },
          {
            "properties": {
              "cache_duration": "none"
            },
            "template": "[{{ .CurrentDate | date .Format }}] ",
            "foreground": "#808080",
            "type": "time",
            "style": "diamond",
            "invert_powerline": true
          },
          {
            "properties": {
              "cache_duration": "none",
              "charged_icon": "\uf240 ",
              "charging_icon": "\uf240 ",
              "discharging_icon": "\uf240 "
            },
            "template": "[{{ if not .Error }}{{ .Icon }}{{ .Percentage }}{{ end }}{{ .Error }}%]",
            "foreground": "#808080",
            "type": "battery",
            "style": "plain"
          }
        ]
      },
      {
        "alignment": "left",
        "newline": true,
        "segments": [
          {
            "foreground": "lightGreen",
            "style": "plain",
            "template": "\u276f",
            "type": "text"
          }
        ],
        "type": "prompt"
      }
    ],
    "final_space": true,
    "version": 3
  }
  